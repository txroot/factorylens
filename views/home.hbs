{% extends "layouts/main.hbs" %}

{% block content %}
  <!-- Login Form -->
  <div id="login-form">
    <h2 class="mb-3 fs-7 fw-bolder">{{ gettext("welcome_title") }}</h2>
    <p class="mb-9">{{ gettext("dashboard_description") }}</p>
    <form>
      <div class="mb-3">
        <label for="inputIdentificer" class="form-label">{{ gettext("username_or_email_label") }}</label>
        <input type="email" class="form-control" id="inputIdentifier" aria-describedby="loginInputHelp">
      </div>
      <div class="mb-4">
        <label for="inputPassword" class="form-label">{{ gettext("password_label") }}</label>
        <input type="password" class="form-control" id="inputPassword">
      </div>
      <div class="d-flex align-items-center justify-content-between mb-4">
        <div class="form-check">
          <input class="form-check-input primary" type="checkbox" value="" id="flexCheckChecked" checked>
          <label class="form-check-label text-dark" for="flexCheckChecked">
            {{ gettext("remember_device") }}
          </label>
        </div>
        <a class="text-primary fw-medium" href="javascript:void(0)" id="recover-password-link">{{ gettext("forgot_password") }}</a>
      </div>
      <a href="javascript:void(0)" id="login-button" class="btn btn-primary w-100 py-8 mb-4 rounded-2">{{ gettext("sign_in_button") }}</a>
      <div class="d-flex align-items-center justify-content-center">
        <p class="fs-4 mb-0 fw-medium">{{ gettext("new_to_platform") }}</p>
        <a class="text-primary fw-medium ms-2" href="javascript:void(0)" id="create-account-link">{{ gettext("create_account") }}</a>
      </div>
    </form>
  </div>

  <!-- Register Form -->
  <div id="register-form" class="d-none">
    <h2 class="mb-3 fs-7 fw-bolder">{{ gettext("register_title") }}</h2>
    <form id="registerForm" action="/users/register" method="POST">
      <div class="mb-3">
        <label for="firstName" class="form-label">{{ gettext("first_name_label") }}</label>
        <input type="text" class="form-control" id="firstName" name="first_name" required>
      </div>
      <div class="mb-3">
        <label for="lastName" class="form-label">{{ gettext("last_name_label") }}</label>
        <input type="text" class="form-control" id="lastName" name="last_name" required>
      </div>
      <div class="mb-3">
        <label for="registerEmail" class="form-label">{{ gettext("email_label") }}</label>
        <input type="email" class="form-control" id="registerEmail" name="email" required>
      </div>
      <div class="mb-3">
        <label for="registerPassword" class="form-label">{{ gettext("password_label") }}</label>
        <input type="password" class="form-control" id="registerPassword" name="password" required>
      </div>
      <div class="mb-3">
        <label for="registerPin" class="form-label">{{ gettext("pin_label") }}</label>
        <input type="text" class="form-control" id="registerPin" name="pin">
      </div>
      <div class="mb-3">
        <label for="username" class="form-label">{{ gettext("username_label") }}</label>
        <input type="text" class="form-control" id="username" name="username">
      </div>
      <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" id="usePin" name="use_pin">
        <label class="form-check-label" for="usePin">
          {{ gettext("use_pin_label") }}
        </label>
      </div>
      <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" id="newsletter" name="newsletter">
        <label class="form-check-label" for="newsletter">
          {{ gettext("newsletter_label") }}
        </label>
      </div>
      <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" id="termsOfUse" name="terms_of_use" required>
        <label class="form-check-label" for="termsOfUse">
          {{ gettext("agree_terms_label") }} <a href="/terms-of-use" target="_blank">{{ gettext("terms_of_use_link") }}</a>
        </label>
      </div>
      <a href="javascript:void(0)" class="text-primary fw-medium" id="back-to-login-link">{{ gettext("back_to_login") }}</a>
      <button type="submit" class="btn btn-primary w-100 py-8 mt-4 rounded-2">{{ gettext("register_button") }}</button>
    </form>
  </div>

  <!-- Recover Password Form -->
  <div id="recover-form" class="d-none">
    <h2 class="mb-3 fs-7 fw-bolder">{{ gettext("recover_password_title") }}</h2>
    <form>
      <div class="mb-3">
        <label for="recoverEmail" class="form-label">{{ gettext("email_label") }}</label>
        <input type="email" class="form-control" id="recoverEmail">
      </div>
      <a href="javascript:void(0)" class="text-primary fw-medium" id="back-to-login-link">{{ gettext("back_to_login") }}</a>
      <button type="submit" class="btn btn-primary w-100 py-8 mt-4 rounded-2">{{ gettext("recover_button") }}</button>
    </form>
  </div>
{% endblock %}
