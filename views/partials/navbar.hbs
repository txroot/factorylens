<nav class="navbar navbar-expand-lg bg-body navbar-light sticky-top">
  <ul class="navbar-nav">
    <li class="nav-item">
      <a class="nav-link sidebartoggler nav-icon-hover ms-3" href="javascript:void(0)" id="headerCollapse">
        <i class="ti ti-menu-2"></i>
      </a>
    </li>
    <li class="nav-item d-none d-lg-block">
      <a class="nav-link nav-icon-hover" href="javascript:void(0)" data-bs-toggle="modal" data-bs-target="#searchModal">
        <i class="ti ti-search"></i>
      </a>
    </li>
  </ul>

  <ul class="navbar-nav quick-links d-none d-lg-flex">
    <!-- your existing “Apps” dropdown here… -->
  </ul>
  <button class="navbar-toggler p-0 border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="p-2"><i class="ti ti-dots fs-7"></i></span>
  </button>

  <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
    <div class="d-flex align-items-center justify-content-between w-100">

      <!-- Mobile off-canvas toggle -->
      <a href="javascript:void(0)" class="nav-link d-flex d-lg-none align-items-center justify-content-center"
        data-bs-toggle="offcanvas" data-bs-target="#mobilenavbar">
        <i class="ti ti-align-justified fs-7"></i>
      </a>

      <ul class="navbar-nav flex-row ms-auto align-items-center">

        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
          <ul class="navbar-nav flex-row ms-auto align-items-center">

            <!-- LANGUAGE SELECTOR -->
            <li class="nav-item dropdown me-3">
              <a class="nav-link" href="#" id="langDropdown" data-bs-toggle="dropdown">
                <img src="{{ url_for('static', filename='img/flags/' ~ current_locale ~ '.svg') }}"
                  class="rounded-circle" width="24" height="24">
              </a>
              <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="langDropdown">
                <li>
                  <a class="dropdown-item d-flex align-items-center"
                    href="{{ url_for('language.change_language', lang_code='en') }}">
                    <img src="{{ url_for('static', filename='img/flags/en.svg') }}" class="rounded-circle me-2"
                      width="20" height="20"> English
                  </a>
                </li>
                <li>
                  <a class="dropdown-item d-flex align-items-center"
                    href="{{ url_for('language.change_language', lang_code='pt') }}">
                    <img src="{{ url_for('static', filename='img/flags/pt.svg') }}" class="rounded-circle me-2"
                      width="20" height="20"> Português
                  </a>
                </li>
              </ul>
            </li>

            <!-- USER AVATAR & MENU -->
            <li class="nav-item dropdown">
              <a class="nav-link d-flex align-items-center" href="#" id="userDropdown" data-bs-toggle="dropdown">
                <img src="{{ current_user.avatar_url or url_for('static', filename='img/users/avatar.png') }}"
                  class="rounded-circle me-2" width="35" height="35">
                <span>{{ current_user.first_name }}{% if current_user.last_name %} {{
                  current_user.last_name }}{% endif %}</span>
              </a>
              <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                <li>
                  <h6 class="dropdown-header">{{ current_user.first_name }}{% if
                    current_user.last_name %} {{ current_user.last_name }}{% endif %}</h6>
                </li>
                <li>
                  <hr class="dropdown-divider">
                </li>
                <li>
                  <a class="dropdown-item d-flex align-items-center" href="{{ url_for('users.settings') }}">
                    <i class="ti ti-settings me-2"></i>{{ _('Settings') }}
                  </a>
                </li>
                <li>
                  <a class="dropdown-item d-flex align-items-center" href="{{ url_for('auth.logout') }}">
                    <i class="ti ti-logout me-2"></i>{{ _('Logout') }}
                  </a>
                </li>
              </ul>
            </li>

            <!-- NOTIFICATIONS  -->
            <li class="nav-item dropdown me-3">
              <a class="nav-link position-relative" href="#" id="notifDropdown" data-bs-toggle="dropdown">
                <i class="ti ti-bell-ringing fs-5"></i>
                {% if notification_count %}
                <span class="badge bg-danger rounded-circle notification-dot"></span>
                {% endif %}
              </a>
              <div class="dropdown-menu dropdown-menu-end p-0" aria-labelledby="notifDropdown" style="min-width:300px;">
                <div class="d-flex align-items-center justify-content-between p-3 border-bottom">
                  <h5 class="mb-0 fs-5 fw-semibold">{{ _('Notifications') }}</h5>
                  {% if notification_count %}
                  <span class="badge bg-primary rounded-pill">{{ notification_count }} new</span>
                  {% endif %}
                </div>
                <div class="message-body" data-simplebar style="max-height:300px;">
                  {% for note in notifications %}
                  <a href="{{ note.link }}" class="d-flex align-items-center px-3 py-2 dropdown-item">
                    <img src="{{ note.avatar_url }}" class="rounded-circle me-3" width="40" height="40">
                    <div>
                      <h6 class="mb-1 fw-semibold">{{ note.title }}</h6>
                      <span class="fs-2 text-muted">{{ note.message }}</span>
                    </div>
                  </a>
                  {% else %}
                  <div class="px-3 py-2 text-center text-muted">{{ _('No notifications') }}</div>
                  {% endfor %}
                </div>
                <div class="p-2 text-center border-top">
                  <a href="{{ url_for('notifications.notifications') }}" class="text-primary">{{
                    _('See All') }}</a>
                </div>
              </div>
            </li>

          </ul>
        </div>
    </div>
</nav>